// ADVERBS AND ADVERBIALS

adverb
    :   (   <6> ""
        |   <1> "vielleicht "
        |   <1> "etwas "
        )
        ( "kaeltlich" | "spielend" | "gespannt" | "gluecklich" | "verspannt"
        | "bloed" | "suspekt" | "begeistert" | "schauend" | "schnell" | "redend"
        | "zufrieden" | "gelangweilt" | "entspannt" | "begafft" | "ruhig"
        | "verkaufend"
        )
    ;

adverbial
    : <50> ("ueber" | "auf" | "mit") " " noun3
    | <20> "zwischen " noun3 " und " noun3
    ;

movement_adverbial
    : adverbial
    | ("durch" | "um" | "in") " " noun4
    | ("aus" | "zu") " " noun3
    ;

opt_interjection
    : <75>  ""
    | <25>  ( "foobar" | "oida" | "heast" | "uppsala" | "lalala" | "ramba zamba"
            )
            ", "
    ;

conjunction
    : "waehrend" | "zudem" | "bis" | "wodurch" | "da" | "solange" | "womit"
    ;
