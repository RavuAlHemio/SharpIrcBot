    | <1> verb3_self_movement
    | <48> verb3_object_simple
    | <1> verb3_object_movement
    | <5> verb3_object_complex
    ;

verb3construct_wg
    :   [ adverb " " ]
        [ adverbial " " ]
        [ noun4 " " ]
        wg_verb3
    ;

