    :   ( "verwechsle"
        | "betrüge"
        )
        [ " " adverb ]
        [ " " adverbial ]
        " "
        noun4
        " mit "
        noun3
    |   "äußere mich"
        [ " " adverb ]
        [ " " adverbial ]
        (   " zu "
            noun3
        |   " über "
            noun4
        )
    |   ( "spiele"
        | "schlafe"
        )
        [ " " adverb ]
        [ " " adverbial ]
        " mit "
        noun3
