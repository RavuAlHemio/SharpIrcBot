// ADVERBS AND ADVERBIALS

adverb
    :   ( "" | "" | "" | [ "vielleicht " | "etwas " ] )
        ( "kaeltlich" | "spielend" | "gespannt" | "gluecklich" | "verspannt"
        | "bloed" | "suspekt" | "begeistert" | "schauend" | "schnell" | "redend"
        | "zufrieden" | "gelangweilt" | "entspannt" | "begafft" | "ruhig"
        | "verkaufend"
        )
    ;

adverbial
    : ("ueber" | "auf" | "mit") " " noun{art_m3, art_f3, art_n3}
    | "zwischen " noun{art_m3, art_f3, art_n3} " und " noun{art_m3, art_f3, art_n3}
    ;

movement_adverbial
    : adverbial
    | ("durch" | "um" | "in") " " noun{art_m4, art_f4, art_n4}
    | ("aus" | "zu") " " noun{art_m3, art_f3, art_n3}
    ;

opt_interjection
    :   ""
    |   ""
    |   ""
    |   ( "foobar" | "oida" | "heast" | "uppsala" | "lalala" | "ramba zamba" )
        ", "
    ;

conjunction
    : "waehrend" | "zudem" | "bis" | "wodurch" | "da" | "solange" | "womit"
    ;
