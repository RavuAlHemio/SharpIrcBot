            " "
            noun4
            [ " " adverb ]
            [ " " adverbial ]
            " an"
    | <2>   ( "schule"
            | "packe"
            )
            " "
            noun4
            [ " " adverb ]
            [ " " adverbial ]
            " ein"
    | <1>   ( "spiele"
            )
