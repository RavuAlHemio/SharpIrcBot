// START SYMBOL

wtf3
    : "Ich " verb1construct ", " opt_interjection conjunction " " chosen_person " " verb3construct "."
    ;

// PERSONS

person : __IRC_nick ;
chosen_person : __IRC_chosen_nick;

// VERBS

verb1construct
    : <4> verb1_simple
    | <1> verb1_simple_movement
    | <13> verb1_self
    | <1> verb1_self_movement
    | <14> verb1_object_simple
    | <1> verb1_object_movement
    | <1> verb1_object_split
    | <1> verb1_object_complex
    ;

verb1_simple
    :   ( "rede"
        | "stinke"
        | "spamme"
        | "liege"
        )
        [ " " adverb ]
        [ " " adverbial ]
    ;

verb1_simple_movement
    :   ( "wichse"
        )
        [ " " adverb ]
        [ " " movement_adverbial ]
    ;

verb1_self
    :   ( "sehe"
        | "beschreibe"
        | "putze"
        | "schlage"
        | "langweile"
        | "aeussere"
        | "erschrecke"
        | "entspanne"
        | "animiere"
        | "erschiesse"
        | "beschimpfe"
        | "fotografiere"
        | "verkaufe"
        )
        " mich"
        [ " " adverb ]
        [ " " adverbial ]
    ;

verb1_self_movement
    :   ( "entspanne"
        )
        " mich"
        [ " " adverb ]
        [ " " movement_adverbial ]
    ;

verb1_object_simple
    :   ( "beschreibe"
        | "putze"
        | "erschrecke"
        | "lese"
        | "esse"
        | "verunstalte"
        | "programmiere"
        | "reibe"
        | "animiere"
        | "erschiesse"
        | "highlighte"
        | "beschimpfe"
        | "fotografiere"
        | "verkaufe"
        )
        " "
        noun4
        [ " " adverb ]
        [ " " adverbial ]
    |   ( "rede"
        )
        [ " " adverb ]
        [ " " adverbial ]
        " ueber "
        noun4
    ;

verb1_object_movement
    :   ( "schlage"
        )
        " "
        noun4
        [ " " adverb ]
        [ " " movement_adverbial ]
    ;

verb1_object_split
    :   ( "schaue"
        )
        " "
        noun4
        [ " " adverb ]
        [ " " adverbial ]
        " an"
    ;

verb1_object_complex
    :   "verwechsle"
        [ " " adverb ]
        [ " " adverbial ]
        " "
        noun4
        " mit "
        noun3
    ;

verb3construct
    : <4> verb3_simple
    | <1> verb3_simple_movement
    | <12> verb3_self
    | <1> verb3_self_movement
    | <15> verb3_object_simple
    | <1> verb3_object_movement
    | <1> verb3_object_complex
    ;

verb3_simple
    :   [ adverb " " ]
        [ adverbial " " ]
        ( "redet"
        | "stinkt"
        | "spammt"
        | "liegt"
        )
    ;

verb3_simple_movement
    :   [ adverb " " ]
        [ movement_adverbial " " ]
        ( "wichst"
        )
    ;

verb3_self
    :   "sich "
        [ adverb " " ]
        [ adverbial " " ]
        ( "sieht"
        | "beschreibt"
        | "putzt"
        | "schlaegt"
        | "langweilt"
        | "aeussert"
        | "erschreckt"
        | "animiert"
        | "erschiesst"
        | "beschimpft"
        | "fotografiert"
        | "verkauft"
        )
    ;

verb3_self_movement
    :   "sich "
        [ adverb " " ]
        [ movement_adverbial " " ]
        ( "entspannt"
        )
    ;

verb3_object_simple
    :   [ adverb " " ]
        [ adverbial " " ]
        noun4
        " "
        ( "beschreibt"
        | "putzt"
        | "erschreckt"
        | "liest"
        | "isst"
        | "verunstaltet"
        | "programmiert"
        | "reibt"
        | "animiert"
        | "erschiesst"
        | "anschaut"
        | "highlightet"
        | "beschimpft"
        | "fotografiert"
        | "verkauft"
        )
    ;

verb3_object_movement
    :   [ adverb " " ]
        noun4
        " "
        [ movement_adverbial " " ]
        ( "schlaegt"
        )
    ;

verb3_object_complex
    :   [ adverb " " ]
        [ adverbial " " ]
        noun4
        " mit "
        noun3
        ( " verwechselt"
        )
    ;

// ARTICLES AND NOUNS

art_m1 : "der" | "ein" ;
art_m3 : "dem" | "einem" ;
art_m4 : "den" | "einen" ;

art_f1 : "die" | "eine" ;
art_f3 : "der" | "einer" ;
art_f4 : "die" | "eine" ;

art_n1 : "das" | "ein" ;
art_n3 : "dem" | "einem" ;
art_n4 : "das" | "ein" ;

noun1 : noun{art_m1, art_f1, art_n1} ;
noun3 : noun{art_m3, art_f3, art_n3} ;
noun4 : noun{art_m4, art_f4, art_n4} ;

