person : __IRC_nick ;
chosen_person : __IRC_chosen_nick;

// VERBS

verb1construct
    : !!opt_B   <3> verb1construct_builtin
    | !opt_g    <1> verb1construct_wg
    ;

verb1construct_builtin
    : <6> verb1_simple
    | <1> verb1_simple_reqadverb
    | <6> verb1_simple_movement
    | <17> verb1_self
    | <7> verb1_self_movement
    | <42> verb1_object_simple
    | <1> verb1_object_movement
    | <6> verb1_object_split
    | <5> verb1_object_complex
    ;

verb1construct_wg
    :   wg_verb1
        [ " " noun4 ]
        [ " " adverb ]
        [ " " adverbial ]
    ;

verb1_simple
    :   ( "rede"
        | "stinke"
        | "spamme"
        | "sitze"
        | "liege"
        | "singe"
        )
        [ " " adverb ]
        [ " " adverbial ]
    ;

verb1_simple_reqadverb
    :   ( "klinge"
        )
        " " adverb
        [ " " adverbial ]
    ;

verb1_simple_movement
    :   ( "wichse"
        | "gehe"
        | "laufe"
        | "fliege"
        | "scheiße"
        | "niese"
        | "purzle"
        )
        [ " " adverb ]
        [ " " movement_adverbial ]
    ;

verb1_self
    :   ( "sehe"
        | "beschreibe"
        | "putze"
        | "schlage"
        | "langweile"
        | "erschrecke"
        | "entspanne"
        | "animiere"
        | "erschieße"
        | "beschimpfe"
        | "fotografiere"
        | "interviewe"
        | "verkaufe"
        | "wiederhole"
        | "hinterfrage"
        | "befeuchte"
        | "trockne"
        )
        " mich"
        [ " " adverb ]
        [ " " adverbial ]
    ;

verb1_self_movement
    :   ( "entspanne"
        )
        " mich"
        [ " " adverb ]
        [ " " movement_adverbial ]
    ;

